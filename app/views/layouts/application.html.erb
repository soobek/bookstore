<!DOCTYPE html>
<html>
<head>
    <title>BOOKSTORE</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<% if notice %>
  <p class="alert alert-success" style="margin-top: 1em;"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger" style="margin-top: 1em;"><%= alert %></p>
<% end %>

<%= yield %>
</div>
</body>
</html>