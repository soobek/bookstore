<!DOCTYPE html>
<html>
<head>
    <title>BOOKSTORE</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
 <!-- menu -->
  <div class="menu">
    <a><%= link_to("My Books", {:controller => 'books', :action => 'index'}, :class => 'btn btn-info')%>        
    </a> | <a class="user_nick">Hello <%= current_user.nick.upcase %>!</a> | 
    <a><%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-info'%>
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'btn btn-danger'  %> </a>
  </div>  
<div class="container">
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</div>
</body>
</html>