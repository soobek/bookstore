<table class="table table-striped">
	<% if !@book.picture.blank? %>
	<tr>
		<th>Image</th>
		<td><%= image_tag(@book.picture) %></td>
	</tr>
	<% end %>
	<tr>
		<th><%= f.label(:picture, "Image") %></th>
		<td><%= f.file_field(:picture) %></td>
	</tr>
	<tr>
		<th><%= f.label(:title) %></th>
		<td><%= f.text_field(:title, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= f.label(:description) %></th>
		<td><%= f.text_field(:description, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= f.label(:text) %></th>
		<td><%= f.text_field(:text, :class => 'form-control') %></td>
	</tr>
	<tr>
		<th><%= f.label(:pages,) %></th>
		<td><%= f.text_field(:pages) %></td>
	</tr>
	<tr>
		<th><%= f.label(:category_id, "Category") %></th>
		<td><%= f.select(:category_id, @category.map{|t| [t.name, t.id ]} , :class => 'form-control') %></td>
	</tr>
	<% if !@book.bookfile.blank? %>
	<tr>
		<th>File</th>
		<td><%= link_to(@book.bookfile_identifier, @book.bookfile.url) %></td>
	</tr>
	<% end %>
	<tr>
		<th><%= f.label(:bookfile, "File") %></th>
		<td><%= f.file_field(:bookfile) %></td>
	</tr>
</table>