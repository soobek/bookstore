<tr>  
    <td><%= image_tag(u.picture.url, :class => "featurette-image img-responsive")%></td>
    <td><%= u.id %></td>
    <td><%= u.category.name %></td>
    <td><%= u.title %></td>
    <td><%= u.user.nick %></td>
    <td><%= u.description %></td>
    <td><%= u.pages %></td>
    <td><%= u.text %></td>
    <td><%= link_to("Edit", edit_book_path(u), :class => 'btn btn-xs btn-primary') %>
    <%= link_to("Delete", book_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger') %>
    </td>
</tr>