
<h1>Books</h1>
<p style="text-align: right;"><%= @book.size %> BOOKS</p>
<p><%= link_to("New",  {:action => 'new'}, :class => 'btn btn-xs btn-success') %>
</p>
<table class="table">
	<tr>
	<th>Image</th>
	<th>ID</th>
	<th>Category</th>
	<th>Title</th>
	<th>Author</th>
	<th>Description</th>
	<th>Pages</th>
	<th>Text</th>

	</tr>
	<% @book.each do |u| %>
	<tr>	
		<td><%= image_tag(u.picture.url, :class => "featurette-image img-responsive")%></td>
		<td><%= u.id %></td>
		<td><%= u.category.name %></td>
		<td><%= u.title %></td>
		<td><%= u.user.nick %></td>
		<td><%= u.description %></td>
		<td><%= u.pages %></td>
		<td><%= u.text %></td>
		<td><%= link_to("Edit",  {:action => 'edit', :id => u.id}, :class => 'btn btn-xs btn-primary') %>
		<%= link_to("Delete",  {:action => 'delete', :id => u.id}, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger') %>
		</td>
	</tr>
	<%end%>
</table>
