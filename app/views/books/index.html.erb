<div class="container">
<h1>User Panel</h1>

<% if current_user.user_role == "admin" %>
<p class="counter"><%= @books.size %> BOOKS</p>
<%else%>
<p class="counter"><%= @user_books.size %> BOOKS</p>
<%end%>

<p><%= link_to("New",  new_book_path, :class => 'btn btn-xs btn-success') %>
</p>
<table class="table">
	<tr>
	<th>Image</th>
	<th>ID</th>
	<th>Category</th>
	<th>Title</th>
	<th>Author</th>
	<th>Description</th>
	<th>Pages</th>
	<th>Text</th>

</tr>
	<% if current_user.user_role == "admin" %>
	<% @books.each do |u| %>
	<tr>
		<td><%= image_tag(u.picture.url, :class => "featurette-image img-responsive")%></td>
		<td><%= u.id %></td>
		<td><%= u.category.name if u.category %></td>
		<td><%= u.title %></td>
		<td><%= u.user.nick %></td>
		<td><%= u.description %></td>
		<td><%= u.pages %></td>
		<td><%= u.text %></td>
		<td><%= link_to("Edit", edit_book_path(u), :class => 'btn btn-xs btn-primary') %>
		<%= link_to("Delete",  book_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger') %>
		</td>
	</tr>
	<%end%>
	<%else%>
	<% @user_books.each do |u| %>
	<tr>
		<td><%= image_tag(u.picture.url, :class => "featurette-image img-responsive")%></td>
		<td><%= u.id %></td>
		<td><%= u.category.name if u.category %></td>
		<td><%= u.title %></td>
		<td><%= u.user.nick %></td>
		<td><%= u.description %></td>
		<td><%= u.pages %></td>
		<td><%= u.text %></td>
		<td><%= link_to("Edit", edit_book_path(u), :class => 'btn btn-xs btn-primary') %>
		<%= link_to("Delete",  book_path(u), method: :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger') %>
		</td>
	</tr>
	<%end%>
	<%end%>
</table>

</div>
