<div class="container" style="background-image: url(<%= asset_path 'books-2463779_640.jpg' %>); position: fixed; left: 0; min-width: 100%; min-height: 100%;">
	<div class="jumbotron" style="margin-top: 15%;">
		<h1 class="display-4" align="center">Welcome to BOOKSTORE!</h1>
		<div class="action" align="center">
			<% if user_signed_in? %>
		  		Logged in as <strong><%= current_user.email %></strong>.
		  		<% if current_user.user_role == "admin" %>
		  		<%= link_to("Admin Panel", {:controller => 'admin_panel', :action => 'index'}, :class => 'btn btn-warning')%>
       		<% else %>
		  		<%= link_to("Your Acount", {:controller => 'user_panel', :action => 'index'}, :class => 'btn btn-warning')%>
		  		<% end %> |
		  		<%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-primary' %> |
		  		<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-danger'  %>
			<% else %>
		  		<%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-primary'  %> |
		  		<%= link_to "Log in", new_user_session_path, :class => 'btn btn-success'  %>
			<% end %>
		</div>
	</div>
	
</div>